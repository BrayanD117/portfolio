---

<section class="bg-gray-50 text-gray-800 py-16">
  <div class="container mx-auto px-6 sm:px-12">
    <h2 class="text-4xl font-bold text-center">Certificaciones</h2>
    <p class="mt-4 text-lg text-gray-600 text-center">
      Certificaciones y cursos completados en diferentes áreas
    </p>

    <div class="swiper mt-12">
      <div class="swiper-wrapper">
        {
          certificates.map((cert) => (
            <div class="swiper-slide">
              <div class="bg-white rounded-lg shadow-lg p-6 h-full flex flex-col">
                <div class="bg-gray-50 p-4 rounded-t-lg">
                  <p class="text-sm font-medium text-gray-900">
                    {cert.category}
                  </p>
                </div>
                <div class="flex-grow p-4">
                  <h3 class="text-xl font-bold mb-2">{cert.name}</h3>
                  <p class="text-gray-600">{cert.provider}</p>
                </div>
                <div class="mt-4 pt-4 border-t border-gray-100">
                  <a
                    href={cert.pdf}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-blue-600 hover:text-blue-800 flex items-center justify-center gap-2 group"
                  >
                    Ver certificado →
                  </a>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<script>
  import Swiper from "swiper";
  import { Autoplay } from "swiper/modules";
  import "swiper/css";

  new Swiper(".swiper", {
    modules: [Autoplay],
    slidesPerView: 1,
    spaceBetween: 30,
    loop: true,
    speed: 3500,
    autoplay: {
      delay: 2000,
      disableOnInteraction: false,
    },
    breakpoints: {
      640: {
        slidesPerView: 2,
      },
      1024: {
        slidesPerView: 3,
      },
    },
  });
</script>

<style>
  .swiper {
    width: 100%;
    padding: 1rem;
    cursor: grab;
  }
  .swiper:active {
    cursor: grabbing;
  }
  .swiper-slide {
    height: auto;
  }
</style>
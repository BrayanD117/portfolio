---
import { getRelativeLocaleUrl } from 'astro:i18n';

const { currentLocale } = Astro;
const locales = ['en', 'es'];

const otherLocale = locales.find(locale => locale !== currentLocale);
---

{otherLocale && (
  <a 
    href={getRelativeLocaleUrl(otherLocale)}
    class="bg-slate-700/50 backdrop-blur-sm text-white px-3 py-2 rounded-lg hover:bg-slate-600/70 transition-colors text-sm font-medium"
    aria-label={`Change language to ${otherLocale === 'es' ? 'Spanish' : 'English'}`}
  >
    {otherLocale.toUpperCase()}
  </a>
)}
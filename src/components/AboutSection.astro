import "../components/styles/AboutSection.css";

function calcularTiempo(inicio: string | number | Date) {
  const fechaInicio = new Date(inicio);
  const fechaActual = new Date();

  let años = fechaActual.getFullYear() - fechaInicio.getFullYear();
  let meses = fechaActual.getMonth() - fechaInicio.getMonth();

  if (meses < 0) {
    años--;
    meses += 12;
  }

  const textoAños = años === 1 ? "Año" : "Años";
  const textoMeses = meses === 1 ? "Mes" : "Meses";

  return `${años} ${textoAños} y ${meses} ${textoMeses}`;
}

const tiempoTrabajando = calcularTiempo("2024-02-02");
